@model TopicIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forum Topics List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Create New Topic&nbsp;<span class="glyphicon glyphicon-plus"></span>
    </a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Topics</th>
        </tr>
    </thead>
    <tbody>

@if (Model.Topics.Count > 0)
{
    foreach (var item in Model.Topics)
    {
        <tr>
            <td>
                <p>@item.Title - Posts: @item.TotalPosts</p>
                <p>by @item.UserName - @item.Date.ToString("dd/MM/yyyy HH:mm:ss")</p>                
                <a asp-action="Create" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-danger" title="New Post">
                    New Post&nbsp;<span class="glyphicon glyphicon-pencil"></span>
                </a>
            </td>
        </tr>        
    }
}
else
{
    <tr>
        <td>
            <p>There's no topic regitred.</p>
        </td>
    </tr>
}
    </tbody>
</table>
